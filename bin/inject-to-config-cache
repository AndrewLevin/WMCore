#!/usr/bin/env python2.6
import sys
from WMCore.Cache.ConfigCache import WMConfigCache

if (len(sys.argv) != 4):
	print "Usage: %s couchUrl database_name input_file" % sys.argv[0]
	sys.exit(1)


couchUrl  = sys.argv[1]
couchDB   = sys.argv[2]
inputFile = sys.argv[3]

cache = WMConfigCache( couchDB, couchUrl )
(docid, revision) = cache.addConfig( inputFile )
print "Added file to config cache"
print "DocID:    %s" % docid
print "Revision: %s" % revision
